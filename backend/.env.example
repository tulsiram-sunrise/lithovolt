DEFAULT_FROM_EMAIL=noreply@lithovolt.com

# Notification Settings
NOTIFICATIONS_EMAIL_ENABLED=True
NOTIFICATIONS_SMS_ENABLED=False
NOTIFICATIONS_FROM_EMAIL=noreply@lithovolt.com
